@using Domain.Interfaces
@using Model.Entites
@inject IRepository<Entity> EntityRepository;
<div class="card">
    <img src="Images/fantasy-creature.jpg" class="card-img-top img-holder" alt="...">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h5 class="card-title">@ThisEntity!.Name</h5>
        </div>
        <p class="card-text">@ThisEntity.Description</p>
    </div>
    <div class="d-flex justify-content-center btn-holder">
        <a href="#" class="btn btn-warning btn-edit w-100">Edit</a>
        <button class="btn btn-danger btn-del w-100" @onclick="() => Delite(ThisEntity)">Del</button>
    </div>
</div>
@code {
    [Parameter] public Entity? ThisEntity { get; set; }

    private void Delite(Entity entity)
    {
        EntityRepository.Delete(entity);
    }

}